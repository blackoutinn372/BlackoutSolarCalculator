<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Com_blackout_solarpanelcalculator.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>userServlet</servlet-name>
    <servlet-class>com.blackout.solarpanelcalculator.server.CalculationServiceImpl</servlet-class>
  </servlet>

  
  <servlet-mapping>
    <servlet-name>userServlet</servlet-name>
    <url-pattern>/com_blackout_solarpanelcalculator/calculationService</url-pattern>
  </servlet-mapping>

  
</web-app>